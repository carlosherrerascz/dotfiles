#launch firefox
"firefox"
    m:0x5 + c:25
    Control+Shift + w 

#launch scrot
"scrot"
    m:0x0 + c:107
    Print 

#scrot select
"sleep 0.1; scrot -s"
    m:0x1 + c:107
    Shift + Print 

#Increase volume
"pamixer -i 5"
    m:0x0 + c:127
    Pause 

#lower volume
"pamixer -d 5"
    m:0x0 + c:78
    Scroll_Lock 

#mute/unmute
"pamixer -t"
    m:0x1 + c:78
    Shift + Scroll_Lock 

